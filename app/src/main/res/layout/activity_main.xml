
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--including the toobar-->
    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/paletteimage"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIBRANT"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/tv_vibrant"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIBRANT DARK"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_vibrant_dark"
        android:textSize="20sp"
        android:layout_below="@+id/tv_vibrant"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIBRANT LIGHT"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/tv_vibrant_light"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_vibrant_dark"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUTED"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/tv_muted"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_vibrant_light"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUTED DARK"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/tv_muted_dark"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_muted"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUTED LIGHT"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_muted_light"
        android:layout_below="@+id/tv_muted_dark"
        android:layout_alignLeft="@+id/tv_muted_dark"
        android:layout_alignStart="@+id/tv_muted_dark"
        android:layout_alignRight="@+id/tv_muted_dark"
        android:layout_alignEnd="@+id/tv_muted_dark" />



</RelativeLayout>
